<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header"
        android:paddingLeft="@dimen/size_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.liuzhuang.rcimageview.RoundCornerImageView
            android:id="@+id/iv_icon"
            app:rciv_radius="@dimen/size_2"
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45"
            android:src="@drawable/share_01" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国中国中国中国中国中国中国"
                android:textColor="#1FD3FF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginTop="@dimen/size_10"
                android:text="sdfdfdfdfdfd" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginLeft="@dimen/size_15"
        android:lineSpacingExtra="@dimen/size_5"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="140"
        android:maxLines="3"
        android:text="视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频"
        android:textSize="16sp" />
    <com.lzy.ninegrid.NineGridView

        android:id="@+id/ng_nine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_260"
        android:layout_marginLeft="@dimen/size_15"
        app:ngv_maxSize="6"
        app:ngv_mode="fill"
        app:ngv_singleImageRatio="1"
        app:ngv_singleImageSize="@dimen/size_65">

    </com.lzy.ninegrid.NineGridView>


    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_55"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">


        <LinearLayout
            android:id="@+id/ll_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/fav_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="58" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_45"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/content_comment" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="58" />
        </LinearLayout>

        <ImageView
            android:id="@+id/relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_45"
            android:src="@drawable/comment_share" />

        <TextView
            android:id="@+id/tv_orginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_120"
            android:text="原文" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:background="@color/bg_gray" />


</LinearLayout>