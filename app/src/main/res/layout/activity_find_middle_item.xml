<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_2"
    android:paddingTop="@dimen/size_2">


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size_2">

        <com.android.liuzhuang.rcimageview.RoundCornerImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/size_95"
            android:layout_height="@dimen/size_85"
            app:rciv_radius="@dimen/size_2" />

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/selector_follow" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="@dimen/size_95"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:text="中间的描述中间的描述中间的描述中间的描述"
        android:textColor="#212121"
        android:textSize="13sp" />


</LinearLayout>