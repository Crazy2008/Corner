<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiao.luo.activity.WriteDataActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_5"
        android:padding="@dimen/size_5">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写资料"
            android:textSize="18sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/headportrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_10">


        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:background="@color/bg_gray"
            android:padding="@dimen/size_5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:inputType="number"
                android:id="@+id/et_smsCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_45"
                android:layout_weight="3"
                android:background="@null"
                android:hint="输入验证码" />


            <Button

                android:textDirection="firstStrong"
                android:id="@+id/btn_sms"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_45"
                android:layout_weight="1"
                android:background="@null" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_nickname"
            style="@style/Edittext_Style"
            android:hint="请输入2-16位的昵称" />

        <EditText
            android:id="@+id/et_password"
            style="@style/Edittext_Style"
            android:hint="请输入6-16位字符密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_btn_black_corner"
            android:text="完成"
            android:textColor="@color/color_white"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>
