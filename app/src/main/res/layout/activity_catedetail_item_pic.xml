<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginTop="@dimen/size_10"
        android:text="sdfdfdfdfdfd"
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="@dimen/size_15"
        android:lineSpacingExtra="@dimen/size_5"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="140"
        android:maxLines="3"
        android:text="视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频"
        android:textSize="16sp" />

    <com.lzy.ninegrid.NineGridView
        android:layout_marginLeft="@dimen/size_15"
        android:id="@+id/ng_nine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_260"
        app:ngv_maxSize="6"
        app:ngv_mode="fill"
        app:ngv_singleImageRatio="1"
        app:ngv_singleImageSize="@dimen/size_65">

    </com.lzy.ninegrid.NineGridView>


    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">



        <LinearLayout
            android:id="@+id/ll_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/fav_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="58" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_marginLeft="@dimen/size_45"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/content_comment" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:text="58" />
        </LinearLayout>

        <ImageView
            android:id="@+id/relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_45"
            android:src="@drawable/comment_share" />

        <TextView
            android:id="@+id/tv_orginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_120"
            android:text="原文" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:background="@color/bg_gray" />


</LinearLayout>